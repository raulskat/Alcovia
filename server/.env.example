# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=intervention_engine
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/intervention_engine

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret for signing mentor action tokens
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production

# n8n Webhook URL (from n8n workflow)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/intervention

# Socket.io CORS (frontend URL)
CORS_ORIGIN=http://localhost:3001

# Intervention Thresholds
QUIZ_PASS_SCORE=7
FOCUS_MIN_MINUTES=60

# Fail-Safe Configuration
MENTOR_RESPONSE_DEADLINE_HOURS=12
AUTO_UNLOCK_HOURS=24
